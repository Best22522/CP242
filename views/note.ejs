<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Notes</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    /* Add custom CSS for the hover animation */
    .btn-hover:hover {
      transform: translateY(-4px);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Gradient background */
    body {
      background: linear-gradient(to left, #4E1F00, #74512D, #FEBA17 , #F8F4E1);
    }

    .text-center {
      margin-top: 100px; /* Adjust this value to center vertically */
    }

  </style>
</head>
<body>

  <%- include('navbar') %>  <!-- Include your navbar from the home page -->

  <div class="text-center">
    <h1 class="text-3xl font-bold text-white">Your Notes</h1>
    <p class="mt-4 text-lg text-white">Here you can add and view your personal notes</p>
    </div>
    <div class="container mx-auto mt-8">
      <!-- Add Form to Create New Note -->
      <form action="/create" method="POST" class="bg-gray-800 p-6 rounded-lg">
        <div class="mb-4">
          <label for="title" class="block text-white">Title</label>
          <input type="text" id="title" name="title" class="w-full px-4 py-2 mt-2 rounded-md" required>
        </div>
  
        <div class="mb-4">
          <label for="content" class="block text-white">Content</label>
          <textarea id="content" name="content" rows="4" class="w-full px-4 py-2 mt-2 rounded-md" required></textarea>
        </div>
  
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Add Note</button>
      </form>
    </div>
    <div class="notes-list mt-8">
      
      <% notes.forEach(note => { %>
        <div class="note-card p-4 bg-gray-700 mb-4 rounded-md">
          <h2 class="text-xl text-white"><%= note.title %></h2>
          <p class="text-white"><%= note.content %></p>
          <a href="/edit/<%= note._id %>" class="text-blue-500">Edit</a>
          <form action="/delete/<%= note._id %>" method="POST" class="inline-block ml-4">
            <button type="submit" class="text-red-500">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>
